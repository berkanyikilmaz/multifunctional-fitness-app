<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/facilitiesTitle"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Facilities: "
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        />

    <AutoCompleteTextView
        android:id="@+id/facilityChoice"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="32dp"
        android:layout_marginRight="53dp"
        android:inputType="none"
        android:text="Choose a Facility"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/slotsTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/facilityChoice"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="Available Slots"
        android:textAlignment="center"
        android:textSize="24sp" />


    <Button
        android:id="@+id/buttonD"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_below="@id/slotsTitle"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:layout_toLeftOf="@+id/buttonW"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="D" />


    <Button
        android:id="@+id/buttonW"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_below="@id/slotsTitle"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="W"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/confirmButton"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@id/schedule"
        android:layout_alignParentRight="true"
        android:text="Appoint"
        />

    <include
        android:id="@+id/schedule"
        layout="@layout/schedule_layout"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@id/buttonD"
        android:layout_marginTop="0dp" />


</RelativeLayout>