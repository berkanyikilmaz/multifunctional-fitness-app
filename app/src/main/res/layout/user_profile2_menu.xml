<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/profileTitle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Profile"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/profileTitle"
        app:srcCompat="@drawable/ic_action_name"
        />

    <TextView
        android:id="@+id/nameTitle"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:text="Name:"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_below="@id/imageView"
        android:layout_marginTop="60dp"
        />


    <EditText
        android:id="@+id/editName"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_toRightOf="@id/nameTitle"
        android:layout_below="@id/imageView"
        android:gravity="center"
        android:text="Name"
        android:layout_marginTop="60dp"
        />

    <TextView
        android:id="@+id/surnameTitle"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:text="Surname:"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_below="@id/nameTitle"
        />


    <EditText
        android:id="@+id/editSurname"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_toRightOf="@id/surnameTitle"
        android:layout_below="@id/editName"
        android:gravity="center"
        android:text="Surname"
        />

    <TextView
        android:id="@+id/usernameTitle"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:text="Username:"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_below="@id/surnameTitle"
        />


    <EditText
        android:id="@+id/editUsername"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_toRightOf="@id/nameTitle"
        android:layout_below="@id/editSurname"
        android:gravity="center"
        android:text="Username"
        />

    <TextView
        android:id="@+id/passwordTitle"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:text="Password:"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_below="@id/usernameTitle"
        />


    <EditText
        android:id="@+id/editPassword"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_toRightOf="@id/passwordTitle"
        android:layout_below="@id/editUsername"
        android:gravity="center"
        android:text="Password"
        />

    <TextView
        android:id="@+id/phoneNumberTitle"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:text="Phone Number:"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_below="@id/passwordTitle"
        />


    <EditText
        android:id="@+id/editPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_toRightOf="@id/phoneNumberTitle"
        android:layout_below="@id/editPassword"
        android:gravity="center"
        android:text="Phone Number"
        />

    <TextView
        android:id="@+id/emailTitle"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:text="E-Mail:"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_below="@id/phoneNumberTitle"
        />


    <EditText
        android:id="@+id/editEmail"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_toRightOf="@id/emailTitle"
        android:layout_below="@id/editPhoneNumber"
        android:gravity="center"
        android:text="E-Mail"
        />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Save"
        android:layout_below="@id/emailTitle"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="60dp"
        />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Cancel"
        android:layout_below="@id/emailTitle"
        android:layout_toRightOf="@id/saveButton"
        android:layout_marginTop="60dp"
        />



</RelativeLayout>