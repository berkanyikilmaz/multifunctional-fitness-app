<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/custom_border">




    <TextView
        android:id="@+id/facilityTitle"
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="Facility #"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/timePeriod"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:text="Current Time Period"
        android:textAlignment="center"
        android:layout_below="@id/facilityTitle"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/quotaText"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:text="Quota: "
        android:textAlignment="center"
        android:layout_below="@id/facilityTitle"
        android:layout_toRightOf="@id/timePeriod"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/appointmentsText"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true"
        android:text="Appointments: "
        android:textAlignment="center"
        android:layout_below="@id/quotaText"
        android:layout_toRightOf="@id/timePeriod"
        android:layout_marginLeft="50dp"
        android:textSize="14sp"
        />

    <ImageView
        android:id="@+id/crossIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/ic_cross_icon"
        android:layout_toRightOf="@id/appointmentsText"
        android:layout_below="@id/facilityTitle"
        android:layout_alignParentRight="true"
        />


</RelativeLayout>