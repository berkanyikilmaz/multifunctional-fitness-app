<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/slotsTitle"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Specify Your Unavailable Time Periods"
        android:textAlignment="center"
        android:textSize="32sp" />



    <Button
        android:id="@+id/continueButton"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@id/createScheduleDailySchedule"
        android:layout_alignParentRight="true"
        android:text="Continue"
        />

    <include
        android:id="@+id/createScheduleDailySchedule"
        layout="@layout/daily_schedule"
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/slotsTitle"
        android:layout_marginTop="0dp" />


</RelativeLayout>